<div class="dark-matter">
<p id="notice"><%= notice %></p>
<%= @contato%>
<h1>Listing Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
     
      <th>Tipo de Contato</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contatos.each do |contato| %>
      <tr style="background-color: <%= cycle('grey', '#555')%>">
        <td><%= contato.nome %></td>
      
        <td><%= contato.tipo.descricao %></td>
        <td><%= link_to t('buttons.show'), contato %></td>
        <td><%= link_to t('buttons.edit'), edit_contato_path(contato) %></td>
        <td><%= link_to t('buttons.destroy'), contato, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('buttons.new'), new_contato_path %>
<%= link_to 'Back', root_path, class:"button" %>
</div>